<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    
   <!-- Estilo de la barra de arriba de la app. (ActionBar) --> 
   <style name="Dialog" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.MyAppTheme</item>
    </style>
    
    <style name="Theme.MyAppTheme" parent="android:style/Widget.Holo.Light">
        <item name="android:background">#FAFAFA</item>
    </style>

    <style name="NewRequestPrimaryText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="ReadedRequestPrimaryText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    
    <style name="NewRequestSecondaryText">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="ReadedRequestSecondaryText">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

	<style name="ButtonText">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/white</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">@color/black</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	    <item name="android:background">@drawable/button_selector</item>
	</style>
	
	<style name="ButtonText_Thin" parent="@style/ButtonText">
	    <item name="android:background">@drawable/button_selector_thin</item>
	</style>
	
	
	
	<style name="Section_Header">
	    <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
	</style>
	
	<style name="Section_Header_Signline">
	    <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">24dp</item>
	</style>
	
	<style name="SignLine_Item">
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
	</style>

	<style name="SignLine_Item_Mini">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
	<style name="SignLine_Item_Mini_Land">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">11dp</item>
        <item name="android:paddingRight">11dp</item>      
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
	</style>
	
</resources>